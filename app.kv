#:kivy 1.10.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import hex kivy.utils.get_color_from_hex

<MyScreenManager>:
    transition: FadeTransition()
    InitScreen:
    HomeScreen:
    VisualizeSystemScreen:

<InitScreen>:
    name: "init"
    PageLayout:
        id: pagelayout_init
        orientation: 'vertical'
        GridLayout:
            cols: 1
            rows: 3
            Label:
                id: lbl_txt_1
                valign: 'middle'
                halign: 'center'
                font_size: 30
                markup: True
                text: "You don't have selected a tax and benefit system yet \n Select a local one below, or swap page!"
                size: self.texture_size
                canvas.before:
                    Color:
                        rgba: hex('#00cc00')
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                id: lbl_txt_2
                valign: 'middle'
                halign: 'center'
                font_size: 30
                markup: True
                text: "You don't have selected a directory"
                canvas.before:
                    Color:
                        rgba: hex('#ffff66')
                    Rectangle:
                        pos: self.pos
                        size: self.size
            FileChooserIconView:
                id: home_file_chooser
                dirselect: True
                canvas.before:
                    Color:
                        rgba: hex('#413FBF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                on_selection: root.selected_file(*args)

        GridLayout:
            cols: 1
            rows: 1
            Label:
                id: txt_slc_online
                valign: 'middle'
                halign: 'center'
                markup: True
                text: "Download it from \n [ref=some] [u] openfisca repos [/u] [/ref]"
                on_ref_press:
                    import webbrowser
                    webbrowser.open('https://github.com/openfisca')
                canvas.before:
                    Color:
                        rgba: hex('#FFFFFF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: "img/github.png"

<HomeScreen>:
    name: "home"
    GridLayout:
        id: gridlayout_home
        orientation: 'vertical'
        cols: 2
        rows: 3
        Button:
            id: btn_1_0
            valign: 'middle'
            halign: 'center'
            markup: True
            background_normal: 'img\\colors\\blue.jpg'
            text: "Visualize the tax and benefit system"
            canvas.before:
                #Color:
                    #rgba: hex('')
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            id: label_0_0
            valign: 'middle'
            halign: 'center'
            size: self.parent.size
            background_normal: 'img\\colors\\white.png'
            canvas.before:
                Color:
                    rgba: hex('#0033cc')
                Rectangle:
                    pos: self.center_x - 50, self.center_y - 50 # default size is 100x100
                    source: 'img\law.png'
        Button:
            id: btn_0_1
            valign: 'middle'
            halign: 'center'
            markup: True
            text: "Do some reforms"
            canvas.before:
                Color:
                    rgba: hex('#FFFFFF')
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            id: label_1_1
            valign: 'middle'
            halign: 'center'
            size: self.parent.size
            canvas.before:
                Rectangle:
                    pos: self.center_x - 50, self.center_y - 50 # default size is 100x100
                    source: 'img\law.png'

        Button:
            id: btn_1_2
            valign: 'middle'
            halign: 'center'
            markup: True
            text: "Make a simulation!"
            canvas.before:
                Color:
                    rgba: hex('#FFFFFF')
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            id: label_0_2
            valign: 'middle'
            halign: 'center'
            size: self.parent.size
            canvas.before:
                Rectangle:
                    pos: self.center_x - 50, self.center_y - 50 # default size is 100x100
                    source: 'img\law.png'

<VisualizeSystemScreen>:
    name: "visualize_system"
    PageLayout:
        id: pagelayout_visualize_system
        orientation: 'vertical'
        GridLayout:
            cols: 2
            rows: 1
            ListView:
                
        GridLayout:
            cols: 2
            rows: 1
        GridLayout:
            cols: 2
            rows: 1
