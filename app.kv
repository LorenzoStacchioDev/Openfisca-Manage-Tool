#:kivy 1.10.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import hex kivy.utils.get_color_from_hex

<MyScreenManager>:
    transition: FadeTransition()
    InitScreen:
    HomeScreen:
    VisualizeSystemScreen:

<InitScreen>:
    name: "init"
    PageLayout:
        id: pagelayout_init
        orientation: 'vertical'
        GridLayout:
            cols: 1
            rows: 3
            Label:
                id: lbl_txt_1
                valign: 'middle'
                halign: 'center'
                font_size: 30
                markup: True
                text: "You don't have selected a tax and benefit system yet \n Select a local one below, or swap page!"
                size: self.texture_size
                canvas.before:
                    Color:
                        rgba: hex('#00cc00')
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                id: lbl_txt_2
                valign: 'middle'
                halign: 'center'
                font_size: 30
                markup: True
                text: "You don't have selected a directory"
                canvas.before:
                    Color:
                        rgba: hex('#ffff66')
                    Rectangle:
                        pos: self.pos
                        size: self.size
            FileChooserIconView:
                id: home_file_chooser
                dirselect: True
                canvas.before:
                    Color:
                        rgba: hex('#413FBF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                on_selection: root.selected_file(*args)

        GridLayout:
            cols: 1
            rows: 1
            Label:
                id: txt_slc_online
                valign: 'middle'
                halign: 'center'
                markup: True
                text: "Download it from \n [ref=some] [u] openfisca repos [/u] [/ref]"
                on_ref_press:
                    import webbrowser
                    webbrowser.open('https://github.com/openfisca')
                canvas.before:
                    Color:
                        rgba: hex('#FFFFFF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: "img/github.png"

<HomeScreen>:
    name: "home"
    GridLayout:
        id: gridlayout_home
        orientation: 'vertical'
        cols: 2
        rows: 3
        Button:
            id: btn_1_0
            valign: 'middle'
            halign: 'center'
            markup: True
            background_normal: 'img\\colors\\blue.jpg'
            text: "Visualize the tax and benefit system"
            on_press: root.go_to_visualize()
            canvas.before:
                #Color:
                    #rgba: hex('')
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            id: label_0_0
            valign: 'middle'
            halign: 'center'
            size: self.parent.size
            background_normal: 'img\\colors\\white.png'
            canvas.before:
                Color:
                    rgba: hex('#0033cc')
                Rectangle:
                    pos: self.center_x - 50, self.center_y - 50 # default size is 100x100
                    source: 'img\law.png'
        Button:
            id: btn_0_1
            valign: 'middle'
            halign: 'center'
            markup: True
            text: "Do some reforms"
            canvas.before:
                Color:
                    rgba: hex('#FFFFFF')
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            id: label_1_1
            valign: 'middle'
            halign: 'center'
            size: self.parent.size
            canvas.before:
                Rectangle:
                    pos: self.center_x - 50, self.center_y - 50 # default size is 100x100
                    source: 'img\law.png'

        Button:
            id: btn_1_2
            valign: 'middle'
            halign: 'center'
            markup: True
            text: "Make a simulation!"
            canvas.before:
                Color:
                    rgba: hex('#FFFFFF')
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            id: label_0_2
            valign: 'middle'
            halign: 'center'
            size: self.parent.size
            canvas.before:
                Rectangle:
                    pos: self.center_x - 50, self.center_y - 50 # default size is 100x100
                    source: 'img\law.png'

<VisualizeSystemScreen>:
    name: "visualize_system"
    fullscreen: True
    on_parent: if args[1] and switch_object_visualize.current_tab == tabbed_variables: root.show_variables()

    TabbedPanel:
        id: switch_object_visualize
        do_default_tab: False
        #pos_hint: {'center_x': .5, 'center_y': .5}
        canvas.before:
            Color:
                rgba: .2,.3,.4,1
            Rectangle:
                pos: self.pos
                size: self.size
        TabbedPanelItem:
            id: tabbed_variables
            text: 'Variables'
            on_release: root.show_variables()

            BoxLayout:
                id: box_variables
                orientation: 'vertical'
                BoxLayout:
                    id: box_variables_inner
                    orientation: 'horizontal'
                    size_hint: (1.0,0.8)
                    FileChooserListView:
                        id: visualize_file_chooser_variables
                        filters: [root.file_allowed]
                        #canvas.before:
                        #    Color:
                        #        rgba: hex('#413FBF')
                        #    Rectangle:
                        #        pos: self.pos
                        #        size: self.size
                        on_selection: root.selected_file(*args)
                    RstDocument:
                        id: document_variables_viewer
                GridLayout:
                    rows: 1
                    cols: 2
                    size_hint: (1.0,0.2)
                    Label:
                        id: current_path_variables
                        valign: 'middle'
                        halign: 'center'
                        size_hint: (1.0,0.2)
                    Button:
                        id: back_home
                        on_press: root.go_to_home()
                        text: 'Come back to home'
                        size_hint: (1.0,0.2)

        TabbedPanelItem:
            id: tabbed_parameters
            text: 'Parameters'
            on_release: root.show_parameters()
            BoxLayout:
                id: box_parameters
                orientation: 'vertical'
                BoxLayout:
                    id: box_parameters_inner
                    orientation: 'horizontal'
                    size_hint: (1.0,0.8)
                    FileChooserListView:
                        id: visualize_file_chooser_parameters
                        filters: [root.file_allowed]
                        #canvas.before:
                        #    Color:
                        #        rgba: hex('#413FBF')
                        #    Rectangle:
                        #        pos: self.pos
                        #        size: self.size
                        on_selection: root.selected_file(*args)
                    RstDocument:
                        id: document_parameters_viewer
                GridLayout:
                    rows: 1
                    cols: 2
                    size_hint: (1.0,0.2)
                    Label:
                        id: current_path_parameters
                        valign: 'middle'
                        halign: 'center'
                        size_hint: (1.0,0.2)
                    Button:
                        id: back_home_from_parameters
                        on_press: root.go_to_home()
                        text: 'Come back to home'
                        size_hint: (1.0,0.2)

        TabbedPanelItem:
            id: tabbed_reforms
            text: 'Reforms'
            on_release: root.show_reforms()
            BoxLayout:
                id: box_reforms
                orientation: 'vertical'
                BoxLayout:
                    id: box_reforms_inner
                    orientation: 'horizontal'
                    size_hint: (1.0,0.8)
                    FileChooserListView:
                        id: visualize_file_chooser_reforms
                        filters: [root.file_allowed]
                        #canvas.before:
                        #    Color:
                        #        rgba: hex('#413FBF')
                        #    Rectangle:
                        #        pos: self.pos
                        #        size: self.size
                        on_selection: root.selected_file(*args)
                    RstDocument:
                        id: document_reforms_viewer
                GridLayout:
                    rows: 1
                    cols: 2
                    size_hint: (1.0,0.2)
                    Label:
                        id: current_path_reforms
                        valign: 'middle'
                        halign: 'center'
                        size_hint: (1.0,0.2)
                    Button:
                        id: back_home_from_parameters
                        on_press: root.go_to_home()
                        text: 'Come back to home'
                        size_hint: (1.0,0.2)
