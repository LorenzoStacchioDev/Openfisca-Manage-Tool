#:kivy 1.10.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import hex kivy.utils.get_color_from_hex

<MyScreenManager>:
    transition: FadeTransition()
    InitScreen:
    HomeScreen:

<InitScreen>:
    name: "init"
    PageLayout:
        id: pagelayout_init
        orientation: 'vertical'
        GridLayout:
            cols: 1
            rows: 3
            Label:
                id: lbl_txt_1
                valign: 'middle'
                halign: 'center'
                font_size: 30
                markup: True
                text: "You don't have selected a tax and benefit system yet \n Select a local one below, or swap page!"
                size: self.texture_size
                canvas.before:
                    Color:
                        rgba: hex('#00cc00')
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                id: lbl_txt_2
                valign: 'middle'
                halign: 'center'
                font_size: 30
                markup: True
                text: "You don't have selected a directory"
                canvas.before:
                    Color:
                        rgba: hex('#ffff66')
                    Rectangle:
                        pos: self.pos
                        size: self.size
            FileChooserIconView:
                id: home_file_chooser
                dirselect: True
                canvas.before:
                    Color:
                        rgba: hex('#413FBF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                on_selection: root.selected_file(*args)

        GridLayout:
            cols: 1
            rows: 1
            Label:
                id: txt_slc_online
                valign: 'middle'
                halign: 'center'
                markup: True
                text: "Download it from \n [ref=some] [u] openfisca repos [/u] [/ref]"
                on_ref_press:
                    import webbrowser
                    webbrowser.open('https://github.com/openfisca')
                canvas.before:
                    Color:
                        rgba: hex('#FFFFFF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: "img/github.png"

<HomeScreen>:
    name: "home"
    GridLayout:
        id: pagelayout_home
        orientation: 'vertical'
        cols: 3
        rows: 2
        Image:
            valign: 'middle'
            halign: 'center'
            size_hint: None, None
            source: 'img\law.png'
        Button:
            id: btn_visual_system
            valign: 'middle'
            halign: 'center'
            markup: True
            text: "Visualize the tax and benefit system"
            canvas.before:
                Color:
                    rgba: hex('#FFFFFF')
                Rectangle:
                    pos: self.pos
                    size: self.size
        Image:
            valign: 'middle'
            halign: 'center'
            size_hint: None, None
            source: 'img\law.png'
        Button:
            id: btn_visual_system
            valign: 'middle'
            halign: 'center'
            markup: True
            text: "Do some reforms"
            canvas.before:
                Color:
                    rgba: hex('#FFFFFF')
                Rectangle:
                    pos: self.pos
                    size: self.size
        Image:
            valign: 'middle'
            halign: 'center'
            size_hint: None, None
            source: 'img\law.png'
        Button:
            id: btn_visual_system
            valign: 'middle'
            halign: 'center'
            markup: True
            text: "Make a simulation!"
            canvas.before:
                Color:
                    rgba: hex('#FFFFFF')
                Rectangle:
                    pos: self.pos
                    size: self.size
