#:kivy 1.10.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import hex kivy.utils.get_color_from_hex
#: import utils kivy.utils


<HomeScreen>:
    name: "home"
    BoxLayout:
        id: boxlayout_home
        orientation: 'vertical'
        rows: 3
        canvas.before:
            Color:
                rgba: hex('ffffff')
            Rectangle:
                pos: self.pos
                size: self.size
        AnchorLayout:
            size_hint: 1.0,.1
            anchor_x: "right"
            anchor_y: "top"
            padding: 0,20,0,0
            Button:
                size_hint: .1, 1
                background_normal: "ffffff"
                on_press: root.create_popup_information()
                Image:
                    source: 'img/questionmark.png'
                    pos: self.parent.pos
                    size: self.parent.size
        BoxLayout:
            id: boxlayout_image
            padding: 0,70,0,0
            orientation: 'horizontal'
            size_hint: 1.0,.5
            Image:
                source: 'img/logo.png'
        BoxLayout:
            id: boxlayout_withbuttons
            orientation: 'horizontal'
            size_hint: 1.0,.4
            Button:
                id: btn_1_0
                valign: 'middle'
                halign: 'center'
                markup: True
                background_color: hex('971640')
                font_size: "18sp"
                size_hint: .4, .3
                text: "Visualize the tax\nand benefit system"
                on_press: root.go_to_visualize()
                canvas.before:
                    #Color:
                        #rgba: hex('')
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Button:
                id: btn_0_1
                valign: 'middle'
                halign: 'center'
                background_color: hex('971640')
                font_size: "18sp"
                size_hint: .4, .3
                markup: True
                text: "Do some reforms"
                on_press: root.go_to_reforms()
                canvas.before:
                    Rectangle:
                        pos: self.pos
                        size: self.size

            Button:
                id: btn_1_2
                valign: 'middle'
                halign: 'center'
                background_color: hex('971640')
                font_size: "18sp"
                size_hint: .4, .3
                markup: True
                text: "Make a [b]simulation[/b]!"
                on_press: root.go_to_simulation()
                canvas.before:
                    Rectangle:
                        pos: self.pos
                        size: self.size


<PopupHomeInstructions>:
    size_hint: 0.9, 0.9
    title: "Instructions for Use"
    name: "visualize_instructions"
    fullscreen: True
    TabbedPanel:
        id: switch_instructions_visualize
        do_default_tab: False
        canvas.before:
            Color:
                rgb: hex("9C2542")
            Rectangle:
                pos: self.pos
                size: self.size
        TabbedPanelItem:
            id: tabbed_italy
            text: 'English'
            #on_release: root.show_variables()
            background_color: (1, 0, 0, .5)
            BoxLayout:
                id: box_italian_instructions
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgb: hex("771C33")
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    id: box_variables_inner
                    orientation: 'horizontal'
                    size_hint: (1.0,0.95)
                    RstDocument:
                        id: document_variables_viewer
                        source: 'config_files/instruction_strings/use_openfisca_MT.rst'